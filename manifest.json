{
    "manifest_version": 2,
    "name": "Hermes Assistant",
    "version": "1.4",
    "permissions": [
      "activeTab",
      "declarativeContent",
      "<all_urls>",
      "storage",
      "background",
      "tabs"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["automate_script.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "commands": {
      "change_input": {
        "suggested_key": {
            "default": "Ctrl+X",
            "mac": "Command+X"
        },
        "description": "Automate Stop"
      }
    }
}